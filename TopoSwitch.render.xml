<renderingStyle name="Topo-switch" depends="topo" defaultColor="#f1eae4" version="1">

	<renderingProperty attr="hideRoads" name="Roads" description="Hide roads"
		type="boolean" possibleValues="" category="hide"/>

	<order>
		<switch>
			<case tag="highway" value="track">
			    <apply_if hideRoads="true" order="-1"/>
			</case>
		</switch>
		<switch>
			<case tag="highway" value="path">
			    <apply_if hideRoads="true" order="-1"/>
			</case>
		</switch>
		<switch>
			<case tag="building" value="yes">
			    <apply_if hideRoads="true" order="-1"/>
			</case>
		</switch>
	</order>

	<text>
	</text>

	<point>
	</point>

	<polygon>
	</polygon>

	<line>
	</line>
</renderingStyle>
